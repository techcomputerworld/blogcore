@model BlogCore.Models.Articulo
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-4">
    <div class="card">
        <div class="card-header bg-light ml-0 row container">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">
                    @Model.Nombre
                </h4>
            </div>
            <div class="col-12 col-md-6">
                <h4 class="text-primary">
                    @Model.FechaCreacion
                </h4>
            </div>
        </div>
        <div class="card-body">
            <div class="col-12">
                <!--mx-auto y d-block es un truco de bootstrap 4 para que se centre la imagen de manera horizontal-->
                <img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block" alt="" />
                <p class="text-secondary">@Html.Raw(Model.Descripcion)</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver a lista</a>
                </div>
            </div>
        </div>
    </div>
</div>

